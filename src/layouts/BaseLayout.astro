---
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/global/Navigation.astro";
import Footer from "../components/global/Footer.astro";
import Breadcrumb from "../components/global/Breadcrumb.astro";
import DarkModeToggle from "../components/global/DarkModeToggle.astro";

const { breadcrumbs } = Astro.props;
const currentPath = Astro.url.pathname;
---

<html
  lang="en"
  class="scroll-smooth selection:bg-accent-500 selection:text-white no-touchevents hydrated"
>
  <head>
    <BaseHead />
  </head>
  <body
    class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 flex flex-col min-h-svh transition-colors duration-200"
  >
    <Navigation />
    {
      currentPath !== "/" && (
        <div class="border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 transition-colors duration-200">
          <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
            <Breadcrumb currentPath={currentPath} customCrumbs={breadcrumbs} />
          </div>
        </div>
      )
    }
    <main class="grow"><slot /></main>
    <Footer />
    <DarkModeToggle />
  </body>
</html>
