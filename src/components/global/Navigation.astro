          <a
            href="/signup"
            class="block px-4 py-2 mt-2 text-sm font-medium text-black dark:text-gray-100 md:mt-0 hover:text-accent-400 dark:hover:text-accent-400 focus:outline-none focus:shadow-outline transition-colors duration-200">
            Sign up
          </a>
          <a
            href="/login"
            class="inline-flex items-center h-8 justify-center px-4 py-2 text-sm font-medium text-black dark:text-gray-100 bg-gray-100 dark:bg-gray-800 rounded-lg group focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 hover:bg-gray-50 dark:hover:bg-gray-700 active:bg-gray-200 dark:active:bg-gray-600 active:text-accent-400 dark:active:text-accent-400 focus-visible:outline-black dark:focus-visible:outline-white transition-colors duration-200">
