---
export interface Props {
    type: "added" | "changed" | "deprecated" | "removed" | "fixed" | "security";
    text?: string;
}

const { type, text } = Astro.props;

const pillConfig = {
    added: {
        classes:
            "bg-green-50 text-green-700 ring-green-600/20 dark:bg-green-500/10 dark:text-green-400 dark:ring-green-500/20",
        label: text || "Added",
    },
    changed: {
        classes:
            "bg-blue-50 text-blue-700 ring-blue-700/10 dark:bg-blue-500/10 dark:text-blue-400 dark:ring-blue-500/20",
        label: text || "Changed",
    },
    deprecated: {
        classes:
            "bg-yellow-50 text-yellow-800 ring-yellow-600/20 dark:bg-yellow-500/10 dark:text-yellow-400 dark:ring-yellow-500/20",
        label: text || "Deprecated",
    },
    removed: {
        classes:
            "bg-red-50 text-red-700 ring-red-600/10 dark:bg-red-500/10 dark:text-red-400 dark:ring-red-500/20",
        label: text || "Removed",
    },
    fixed: {
        classes:
            "bg-purple-50 text-purple-700 ring-purple-700/10 dark:bg-purple-500/10 dark:text-purple-400 dark:ring-purple-500/20",
        label: text || "Fixed",
    },
    security: {
        classes:
            "bg-orange-50 text-orange-800 ring-orange-600/20 dark:bg-orange-500/10 dark:text-orange-400 dark:ring-orange-500/20",
        label: text || "Security",
    },
};

const config = pillConfig[type];
---

<span
    class={`inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1 ring-inset ${config.classes}`}
>
    {config.label}
</span>
